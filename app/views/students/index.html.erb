<h1>Lista de Estudantes</h1>
<%= link_to "Novo Estudante", new_student_path, class: "btn btn-success" %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome</th>
			<th>Número de Registro</th>
			<th>Status</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @students.each do |student| %>
		<tr>
			<td><%= student.name %></td>
			<td><%= student.register_number %></td>
			<td><%= student.status %></td>
			<td><%= link_to "Detalhes", student %></td>
			<td><%= link_to "Editar", edit_student_path(student) %></td>
			<td><%= link_to "Deletar", student, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>