<%= link_to "Novo", new_course_path %>
<table>
	<thead>
		<tr>
			<th>Nome</th>
			<th>Descrição</th>
			<th>Status</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
		<tr>
			<td><%= course.name %></td>
			<td><%= course.description %></td>
			<td><%= course.status %></td>
			<td><%= link_to "Detalhes", course %></td>
			<td><%= link_to "Editar", edit_course_path(course) %></td>
			<td><%= link_to "Deletar", course, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>